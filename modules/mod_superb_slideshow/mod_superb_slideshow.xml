<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
	<name>Superb Slideshow</name>
	<author>Gopi Ramasamy</author>
	<creationDate>May 2015</creationDate>
	<copyright>(C) 2010 - 2015 www.gopiplus.com, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>gopiplus@gmail.com</authorEmail>
	<authorUrl>http://www.gopiplus.com/extensions/2011/06/superb-slideshow-joomla-module/</authorUrl>
	<version>3.4</version>
	<description>SUPERB_SLIDESHOW_DESC</description>
	<languages>
		<language tag="en-GB">language/en-GB.mod_superb_slideshow.ini</language>
		<language tag="en-US">language/en-US.mod_superb_slideshow.ini</language>
	</languages>
	<files>
		<filename module="mod_superb_slideshow">mod_superb_slideshow.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_superb_slideshow.xml</filename>
		<folder>tmpl</folder>
		<folder>inc</folder>
		<folder>images</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="ImageDetails" label="IMAGE_DETAILS">
				<field name="sbs_imgfolder" type="text" size="50" default="modules/mod_superb_slideshow/images" label="IMAGE_FOLDER" description="IMAGE_FOLDER_DESC" />
				<field name="sbs_imglink" type="text" size="50" default="http://www.gopiplus.com" label="IMAGE_LINK" description="IMAGE_LINK_DESC" />
			</fieldset>
			<fieldset name="SlidshowSetting" label="SLIDESHOW_SETTING">
				<field name="sbs_width" type="text" default="150" label="SLIDESHOW_WIDTH" description="SLIDESHOW_WIDTH_DESC" />
				<field name="sbs_height" type="text" default="100" label="SLIDESHOW_HEIGHT" description="SLIDESHOW_HEIGHT_DESC" />
				<field name="sbs_random" type="list" default="N" label="SLIDESHOW_RANDOM" description="SLIDESHOW_RANDOM_DESC">
					<option value="Y">Y</option>
					<option value="N">N</option>
				</field>
				<field name="sbs_pause" type="text" default="2500" label="PAUSE" description="PAUSE_DESC" />
				<field name="sbs_fadeduration" type="text" default="500" label="FADE_DURATION" description="FADE_DURATION_DESC" />
				<field name="sbs_cycles" type="text" default="0" label="CYCLE" description="CYCLE_DESC" />
				<field name="sbs_durationoftrans" type="list" default="always" label="DURATION" description="DURATION_DESC">
					<option value="always">always</option>
					<option value="ondemand">ondemand</option>
					<option value="none">none</option>
				</field>
				<field name="moduleclass_sfx" type="text" default="" label="MODULE" description="MODULE_DESC" />
			</fieldset>
			<fieldset name="JquerySettings" label="JQUERY_SETTING">
				<field name="sbs_jquery" type="list" default="no" label="INCLUDE_JQUERY" description="INCLUDE_JQUERY_DESC">
						<option value="yes">YES</option>
						<option value="no">NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>